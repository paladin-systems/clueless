{
  "name": "clueless",
  "version": "1.0.0",
  "description": "Clueless real-time AI-powered open-source assistant",
  "main": "dist/electron/main.js",
  "scripts": {
    "clean": "rd /s /q dist",
    "dev": "bunx electron-vite dev",
    "build": "bunx electron-vite build",
    "preview": "bunx electron-vite preview",
    "start": "bunx electron .",
    "package:portable": "bunx electron-vite build && bunx electron-builder --config electron-builder.json",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "format": "biome format .",
    "format:fix": "biome format --write .",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "biome check --write"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@alexanderolsen/libsamplerate-js": "^2.1.2",
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/modifiers": "^9.0.0",
    "@google/genai": "^1.3.0",
    "@tailwindcss/typography": "^0.5.16",
    "@tailwindcss/vite": "^4.1.8",
    "audify": "^1.9.0",
    "clsx": "^2.1.1",
    "dotenv": "^16.5.0",
    "dotenv-webpack": "^8.1.0",
    "framer-motion": "^12.15.0",
    "pino": "^9.7.0",
    "pino-pretty": "^13.0.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-icons": "^5.5.0",
    "react-markdown": "^10.1.0",
    "tailwind-merge": "^3.3.0",
    "zustand": "^5.0.5"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/electron": "^1.6.12",
    "@types/node": "^22.15.29",
    "@types/react": "^19.1.6",
    "@types/react-dom": "^19.1.5",
    "@types/react-resizable": "^3.0.8",
    "@vitejs/plugin-react": "^4.5.1",
    "concurrently": "^9.1.2",
    "electron": "^36.3.2",
    "electron-builder": "^26.0.12",
    "electron-squirrel-startup": "^1.0.1",
    "electron-vite": "^3.1.0",
    "eslint": "^9.28.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.0",
    "prettier": "^3.5.3",
    "tailwindcss": "^4.1.8",
    "typescript": "^5.8.3",
    "vite": "^6.3.5",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.6"
  },
  "build": {
    "appId": "com.example.clueless",
    "files": ["dist/**/*"],
    "win": {
      "target": "nsis"
    }
  }
}
